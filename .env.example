# Database location (persistent storage)
DATABASE_PATH=/var/lib/lastwar/alliance.db

# Session secret key (generate with: openssl rand -hex 32)
# IMPORTANT: Change this in production!
SESSION_KEY=your-random-64-character-hex-string-here-change-this-in-production

# Production mode - enables secure cookies (HTTPS only)
PRODUCTION=true
HTTPS=true

# Server port (8080 for reverse proxy behind Caddy/Nginx)
PORT=8080
